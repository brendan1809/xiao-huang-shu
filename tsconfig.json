{
  "compilerOptions": {
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "jsx": "react-native",
    "module": "es2015",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": false,
    "sourceMap": true,
    "target": "esnext",
    "lib": ["esnext", "dom"],
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "paths": {
      "react": ["./node_modules/@types/react"],
      "components": ["./app/components"],
      "components/*": ["./app/components/*"],
      "containers": ["./app/containers"],
      "i18n": ["./app/i18n"],
      "config/*": ["./app/config/*"],
      "utils/*": ["./app/utils/*"],
      "models": ["./app/models"],
      "models/*": ["./app/models/*"],
      "screens": ["./app/screens"],
      "screens/*": ["./app/screens/*"],
      "theme": ["./app/theme"],
      "colors": ["./app/theme/colors"]
    },
    "baseUrl": "./"
  },
  "exclude": ["node_modules"],
  "include": ["index.js", "App.js", "app", "test", "*.js"],
  "extends": "expo/tsconfig.base"
}
